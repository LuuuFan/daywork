<p id="notice"><%= notice %></p>

<h1>Cheers</h1>

<table>
  <thead>
    <tr>
      <th>Cheer From User</th>
      <th>Cheers on Your Goal</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% current_user.goals.each do |goal| %>
      <% goal.cheers.each do |cheer| %>
      <tr>
        <td><%= cheer.user.username %></td>
        <td><%= cheer.goal.title %></td>
        <!-- <td><%#= link_to 'Show', cheer %></td>
        <td><%#= link_to 'Edit', edit_cheer_path(cheer) %></td>
        <td><%#= link_to 'Destroy', cheer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

